{
  "private": true,
  "scripts": {
    "start": "pnpm -C packages/slide run dev",
    "build": "pnpm run build --filter ./packages",
    "test": "pnpm -C packages/core run test",
    "format": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ],
    "*.vue": [
      "prettier --parser=vue --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "flashfill": "workspace:*",
    "lint-staged": "^11.1.2",
    "pnpm": "^6.18.0",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1",
    "tsup": "^5.2.1",
    "typescript": "^4.4.3",
    "zx": "^4.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
